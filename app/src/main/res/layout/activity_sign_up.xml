<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="회원가입"
                android:textColor="#050505"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:inputType="text"
                    android:id="@+id/nameText"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/editform"
                    android:hint="이름을 입력하세요"
                    android:padding="10dp"
                    android:textColor="#ffffffff"
                    android:textColorHint="#ffffffff" />
                //android:drawableStart="@drawable/ic_folder_shared_black_24dp"
                //android:drawableLeft="@drawable/ic_folder_shared_black_24dp"

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:inputType="text"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/idText"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/editform"

                    android:hint="아이디를 입력하세요"
                    android:padding="10dp"
                    android:textColor="#ffffffff"
                    android:textColorHint="#ffffffff" />
                //android:drawableStart="@drawable/ic_person_black_24dp"
                //android:drawableLeft="@drawable/ic_person_black_24dp"

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/passwordText"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editform"
                    android:singleLine="true"
                    android:hint="비밀번호를 입력하세요"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="#ffffffff"
                    android:textColorHint="#ffffffff" />
                //android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"

                <EditText

                    android:id="@+id/passwordText2"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/editform"
                    android:singleLine="true"
                    android:hint="비밀번호를 다시 입력하세요"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="#ffffffff"
                    android:textColorHint="#ffffffff" />
                // android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                //android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                <EditText
                    android:singleLine="true"
                    android:id="@+id/emailText"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/editform"
                    android:inputType="textEmailAddress"
                    android:hint="이메일을 입력하세요"
                    android:padding="10dp"
                    android:textColor="#ffffffff"
                    android:textColorHint="#ffffffff" />
                //android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                //android:drawableLeft="@drawable/ic_mail_outline_black_24dp"





            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ageText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/editform"
                    android:enabled="false"
                    android:hint="생년월일"
                    android:padding="10dp"
                    android:textColor="#ffffffff"
                    android:textColorHint="#ffffffff" />

                <Button
                    android:id="@+id/picker_ymd"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/btn_register"
                    android:text="날짜 선택"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#ffffffff"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Spinner
                    android:id="@+id/graduationSpinner"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"></Spinner>

                <RadioGroup
                    android:id="@+id/authorityGroup"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/userRadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="사용자" />

                    <RadioButton
                        android:id="@+id/adminRadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="관리자" />
                </RadioGroup>
                <RadioGroup
                    android:id="@+id/genderGroup"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/genderMan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="남자" />

                    <RadioButton
                        android:id="@+id/genderWoman"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="여자" />
                </RadioGroup>


                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_register"
                    android:text="가입하기"

                    android:textColor="#ffffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />






            </LinearLayout>


            // android:onClick="insertData"
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>